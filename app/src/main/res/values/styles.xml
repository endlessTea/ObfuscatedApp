<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="DemoTitleStyle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#d84c95ff</item>
        <item name="android:textSize">45dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DemoTextStyle" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#d84c95ff</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DemoStyle" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#a7000000</item>
        <item name="sv_showcaseColor">#000</item>
        <item name="sv_titleTextAppearance">@style/DemoTitleStyle</item>
        <item name="sv_detailTextAppearance">@style/DemoTextStyle</item>
    </style>

    <style name="ShowcaseButton">
        <item name="android:minWidth">150dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">45dp</item>
        <item name="android:textColor">#d84c95ff</item>
        <item name="android:background">@drawable/button</item>
    </style>

</resources>
